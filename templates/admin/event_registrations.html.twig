{% extends 'baseAdmin.html.twig' %} {% block title %}Participants à l'événement{% endblock %} {% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h6>Liste des participants à l'événement</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom
                                        complet
                                    </th>
                                    <th
                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Email</th>
                                    <th
                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Téléphone</th>
                                    <th
                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Date d'inscription</th>
                                    <th
                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Nombre d'invités</th>
                                    <th
                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Compte utilisateur</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for registration in eventRegistrations %}
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                {# <img
                                                    src="{{ asset('admin/assets/img/team-' ~ ((loop.index % 4) + 1) ~ '.jpg') }}"
                                                    class="avatar avatar-sm me-3" alt="user image"> #}
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">{{ registration.firstName }} {{
                                                    registration.lastName }}</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{ registration.email }}</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{ registration.phone }}</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{
                                            registration.registeredAt|date('d/m/Y H:i') }}</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{ registration.guests|length }}</p>
                                    </td>
                                    <td>
                                        {% if registration.user %}
                                        <span class="badge badge-sm bg-gradient-success">Compte créé</span> {% else %}
                                        <span class="badge badge-sm bg-gradient-secondary">Sans compte</span> {% endif
                                        %}
                                    </td>
                                    <td class="align-middle">
                                        <a href="{{ path('app_event_registration_show', {'id': registration.id}) }}"
                                            class="text-secondary font-weight-bold text-xs me-2" data-toggle="tooltip"
                                            data-original-title="Voir détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_event_registration_edit', {'id': registration.id}) }}"
                                            class="text-secondary font-weight-bold text-xs me-2" data-toggle="tooltip"
                                            data-original-title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {# {{ include('event_registration/_delete_form.html.twig') }} #}
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">Aucun participant trouvé</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}