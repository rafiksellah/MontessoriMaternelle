{# templates/admin_contact/index.html.twig #}
{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion des contacts{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üìß Gestion des contacts</h1>
        <div class="d-flex align-items-center">
            <span class="badge badge-light mr-2">Total : {{ contacts|length }}</span>
            <button class="btn btn-outline-secondary btn-sm" onclick="window.location.reload()">
                <i class="fas fa-sync-alt"></i> Actualiser
            </button>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center bg-warning text-white">
                <div class="card-body">
                    <h4>{{ contacts|filter(c => c.status == 'pending')|length }}</h4>
                    <p class="mb-0">En attente</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h4>{{ contacts|filter(c => c.status == 'appointment_scheduled')|length }}</h4>
                    <p class="mb-0">RDV programm√©s</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h4>{{ contacts|filter(c => c.status == 'confirmed')|length }}</h4>
                    <p class="mb-0">Confirm√©s</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-danger text-white">
                <div class="card-body">
                    <h4>{{ contacts|filter(c => c.status == 'rejected')|length }}</h4>
                    <p class="mb-0">Refus√©s</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>üîç Filtres</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <select class="form-control" id="statusFilter" onchange="filterContacts()">
                        <option value="">Tous les statuts</option>
                        <option value="pending">En attente</option>
                        <option value="appointment_scheduled">RDV programm√©</option>
                        <option value="confirmed">Confirm√©</option>
                        <option value="rejected">Refus√©</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="nameFilter" placeholder="Nom parent ou enfant"
                        onkeyup="filterContacts()">
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" id="dateFilter" onchange="filterContacts()">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-secondary" onclick="clearFilters()">
                        <i class="fas fa-times"></i> Effacer filtres
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des contacts -->
    <div class="card">
        <div class="card-header">
            <h5>üìã Liste des contacts</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0" id="contactsTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Statut</th>
                            <th>Parent</th>
                            <th>Enfant</th>
                            <th>√Çge</th>
                            <th>Contact</th>
                            <th>Objectif</th>
                            <th>Date candidature</th>
                            <th>RDV</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contact in contacts %}
                        <tr class="contact-row" data-status="{{ contact.status }}"
                            data-name="{{ contact.parentName|lower }} {{ contact.childName|lower }}"
                            data-date="{{ contact.createdAt|date('Y-m-d') }}">
                            <td>
                                <span class="badge badge-{{ contact.statusColor }} badge-pill">
                                    {% if contact.status == 'pending' %}
                                    ‚è≥ {{ contact.statusText }}
                                    {% elseif contact.status == 'appointment_scheduled' %}
                                    üìÖ {{ contact.statusText }}
                                    {% elseif contact.status == 'confirmed' %}
                                    ‚úÖ {{ contact.statusText }}
                                    {% elseif contact.status == 'rejected' %}
                                    ‚ùå {{ contact.statusText }}
                                    {% endif %}
                                </span>
                            </td>
                            <td>
                                <strong>{{ contact.parentName }}</strong>
                                {% if contact.status == 'pending' %}
                                <span class="badge badge-warning badge-sm ml-1">NOUVEAU</span>
                                {% endif %}
                            </td>
                            <td>{{ contact.childName }}</td>
                            <td>
                                <span class="badge badge-light">{{ contact.childAge }} ans</span>
                            </td>
                            <td>
                                <small>
                                    üìß {{ contact.email }}<br>
                                    üìû {{ contact.phoneNumber }}
                                </small>
                            </td>
                            <td>
                                <span class="badge badge-secondary">{{ contact.objective }}</span>
                            </td>
                            <td>
                                <small>{{ contact.createdAt|date('d/m/Y H:i') }}</small>
                            </td>
                            <td>
                                {% if contact.appointmentDate %}
                                <small class="text-info">
                                    <i class="fas fa-calendar"></i> {{ contact.appointmentDate|date('d/m/Y H:i') }}
                                </small>
                                {% else %}
                                <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}"
                                        class="btn btn-sm btn-outline-primary" title="Voir d√©tails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    {% if contact.status == 'pending' %}
                                    <span class="btn btn-sm btn-outline-warning" title="Action requise">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </span>
                                    {% elseif contact.status == 'appointment_scheduled' %}
                                    <span class="btn btn-sm btn-outline-info" title="RDV programm√©">
                                        <i class="fas fa-clock"></i>
                                    </span>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                Aucun contact pour le moment
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function filterContacts() {
        const statusFilter = document.getElementById('statusFilter').value.toLowerCase();
        const nameFilter = document.getElementById('nameFilter').value.toLowerCase();
        const dateFilter = document.getElementById('dateFilter').value;
        const rows = document.querySelectorAll('.contact-row');

        rows.forEach(row => {
            const status = row.getAttribute('data-status');
            const name = row.getAttribute('data-name');
            const date = row.getAttribute('data-date');

            let showRow = true;

            // Filtre par statut
            if (statusFilter && status !== statusFilter) {
                showRow = false;
            }

            // Filtre par nom
            if (nameFilter && !name.includes(nameFilter)) {
                showRow = false;
            }

            // Filtre par date
            if (dateFilter && date !== dateFilter) {
                showRow = false;
            }

            row.style.display = showRow ? '' : 'none';
        });
    }

    function clearFilters() {
        document.getElementById('statusFilter').value = '';
        document.getElementById('nameFilter').value = '';
        document.getElementById('dateFilter').value = '';
        filterContacts();
    }

    // Auto-refresh toutes les 5 minutes
    setInterval(() => {
        const now = new Date();
        const lastRefresh = localStorage.getItem('lastRefresh');

        if (!lastRefresh || (now - new Date(lastRefresh)) > 300000) { // 5 minutes
            localStorage.setItem('lastRefresh', now.toISOString());
            window.location.reload();
        }
    }, 60000); // V√©rifie chaque minute
</script>

<style>
    .badge-pill {
        border-radius: 10rem;
        padding: 0.5em 0.75em;
        font-size: 0.85em;
    }

    .contact-row:hover {
        background-color: rgba(0, 123, 255, 0.1) !important;
    }

    .badge-sm {
        font-size: 0.7em;
        padding: 0.2em 0.4em;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .table th {
        font-weight: 600;
        font-size: 0.9em;
    }

    .btn-group .btn {
        margin-right: 2px;
    }

    @media (max-width: 768px) {
        .table-responsive {
            font-size: 0.8em;
        }

        .btn-sm {
            padding: 0.2rem 0.4rem;
            font-size: 0.7rem;
        }
    }
</style>
{% endblock %}