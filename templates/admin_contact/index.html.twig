{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion des Contacts - Admin{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h6>Liste des Candidatures</h6>
                    <div class="text-sm">
                        <span class="badge badge-sm bg-gradient-info">{{ contacts|length }} candidature(s)</span>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    {% if contacts is empty %}
                    <div class="text-center py-4">
                        <p class="text-muted">Aucune candidature pour le moment.</p>
                    </div>
                    {% else %}
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Parent</th>
                                    <th
                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Enfant</th>
                                    <th
                                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Âge</th>
                                    <th
                                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Objectif</th>
                                    <th
                                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Status</th>
                                    <th
                                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Date</th>
                                    <th class="text-secondary opacity-7">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for contact in contacts %}
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">{{ contact.parentName }}</h6>
                                                <p class="text-xs text-secondary mb-0">{{ contact.email }}</p>
                                                <p class="text-xs text-secondary mb-0">{{ contact.phoneNumber }}</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">{{ contact.childName }}</h6>
                                            <p class="text-xs text-secondary mb-0">
                                                Né(e) le {{ contact.childBirthDate|date('d/m/Y') }}
                                            </p>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="badge badge-sm bg-gradient-primary">{{ contact.childAge }}
                                            ans</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">{{ contact.objective
                                            }}</span>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span
                                            class="badge badge-sm bg-gradient-{{ contact.status == 'accepted' ? 'success' : (contact.status == 'rejected' ? 'danger' : 'warning') }}">
                                            {{ contact.statusText }}
                                        </span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">
                                            {{ contact.createdAt|date('d/m/Y') }}
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        <div class="d-flex">
                                            <a href="{{ path('app_admin_contact_show', {id: contact.id}) }}"
                                                class="btn btn-link text-info text-gradient px-3 mb-0"
                                                data-bs-toggle="tooltip" data-bs-original-title="Voir détails">
                                                <i class="fas fa-eye text-info me-2"></i>Voir
                                            </a>
                                            {% if contact.status == 'pending' %}
                                            <a href="{{ path('app_admin_contact_show', {id: contact.id}) }}"
                                                class="btn btn-link text-success text-gradient px-3 mb-0"
                                                data-bs-toggle="tooltip" data-bs-original-title="Répondre">
                                                <i class="fas fa-reply text-success me-2"></i>Répondre
                                            </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Total</p>
                                <h5 class="font-weight-bolder mb-0">{{ contacts|length }}</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="ni ni-single-02 text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">En attente</p>
                                <h5 class="font-weight-bolder mb-0">
                                    {{ contacts|filter(c => c.status == 'pending')|length }}
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                                <i class="ni ni-time-alarm text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Acceptées</p>
                                <h5 class="font-weight-bolder mb-0 text-success">
                                    {{ contacts|filter(c => c.status == 'accepted')|length }}
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                                <i class="ni ni-check-bold text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Refusées</p>
                                <h5 class="font-weight-bolder mb-0 text-danger">
                                    {{ contacts|filter(c => c.status == 'rejected')|length }}
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-danger shadow text-center border-radius-md">
                                <i class="ni ni-fat-remove text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}