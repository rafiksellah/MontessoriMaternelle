<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>{% block title %}{{ 'site.name'|trans }} {{ 'site.name1'|trans }} {{ 'site.name2'|trans }} - {% endblock %}
    </title>

    <meta name="description" content="{{ 'site.meta.description'|trans }}">
    <meta name="keywords" content="{{ 'site.meta.keywords'|trans }}">
    <meta name="robots" content="index, follow">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://mia-dz.com/">
    <meta property="og:title" content="{{ 'site.meta.og_title'|trans }}">
    <meta property="og:description" content="{{ 'site.meta.og_description'|trans }}">
    <meta property="og:image" content="{{ asset('assets/img/logo.png') }}">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://mia-dz.com/">
    <meta property="twitter:title" content="{{ 'site.meta.twitter_title'|trans }}">
    <meta property="twitter:description" content="{{ 'site.meta.twitter_description'|trans }}">
    <meta property="twitter:image" content="{{ asset('assets/img/logo.png') }}">

    <!-- Données structurées JSON-LD pour organisation éducative -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "EducationalOrganization",
            "name": "{{ 'site.name'|trans }} {{ 'site.name1'|trans }} {{ 'site.name2'|trans }}",
            "alternateName": "MIA",
            "url": "https://mia-dz.com",
            "logo": "https://mia-dz.com/assets/img/logo.png",
            "description": "{{ 'site.meta.description'|trans }}",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Alger",
                "addressCountry": "Algérie"
            },
            "email": "info@mia-dz.com",
            "telephone": "+213 666 340 821",
            "sameAs": [
                "https://www.facebook.com/montessorialgerie",
                "https://www.instagram.com/montessori_algerie"
            ]
        }
    </script>
    <!-- Favicons -->

    <link rel="icon" type="image/png" href="{{ asset('assets/img/favico/favicon-96x96.png') }}" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="{{ asset('assets/img/favico/favicon.svg') }}" />
    <link rel="shortcut icon" href="{{ asset('assets/img/favico/favicon.ico') }}" />
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('assets/img/favico/apple-touch-icon.png') }}" />
    <link rel="manifest" href="{{ asset('assets/img/favico/site.webmanifest') }}">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="{{ asset('assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/aos/aos.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/glightbox/css/glightbox.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/swiper/swiper-bundle.min.css') }}" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="{{ asset('assets/css/main.css') }}" rel="stylesheet">

    <!-- Custom Language Selector CSS -->
    <link href="{{ asset('assets/css/custom-language.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/responsive-header.css') }}" rel="stylesheet">

    <!-- RTL support for Arabic -->
    {% if app.request.locale == 'ar' %}
    <link href="{{ asset('assets/css/rtl.css') }}" rel="stylesheet"> {% endif %} {% block stylesheets %}{% endblock %}
</head>

<body class="{% block body_class %}{% if app.request.locale == 'ar' %}rtl{% endif %}{% endblock %}">
    {% block header %}
    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <!-- Logo -->
            <a href="{{ path('app_home', {'_locale': app.request.locale}) }}" class="logo d-flex align-items-center">
                <img src="{{ asset('assets/img/logo.png') }}" loading="lazy" alt="{{ 'site.name'|trans }}"
                    class="logo-img">
                <div class="logo-text">
                    <h1 class="sitenames">{{ 'site.name'|trans }}</h1>
                    <h2 class="sitenames">{{ 'site.name1'|trans }}</h2>
                    <h3 class="sitenames">{{ 'site.name2'|trans }}</h3>
                </div>
            </a>

            <!-- Menu de navigation principal -->
            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="{{ path('app_home', {'_locale': app.request.locale}) }}"
                            class="{% if app.request.get('_route') == 'app_home' %}active{% endif %}">
                            {{ 'nav.home'|trans }}</a>
                    </li>
                    <li><a href="{{ path('app_recrutement', {'_locale': app.request.locale}) }}"
                            class="{% if app.request.get('_route') == 'app_recrutement' %}active{% endif %}">
                            {{ 'nav.employment'|trans }}</a>
                    </li>
                    <li><a href="https://www.mia-dz.com"
                            class="{% if app.request.get('_route') == 'app_recrutement' %}active{% endif %}">
                            {{ 'nav.formation'|trans }}</a>
                    </li>
                </ul>
            </nav>

            <!-- Groupe d'éléments à droite -->
            <div class="header-right-group">
                <!-- Language Selector -->
                <nav id="language-nav" class="navmenu">
                    <ul>
                        <li class="dropdown">
                            <a href="#" aria-expanded="false">
                                <span>{{ app.request.locale|upper }}</span>
                                <i class="bi bi-chevron-down"></i>
                            </a>
                            <ul>
                                <li><a
                                        href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}">Fr</a>
                                </li>
                                <li><a
                                        href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">En</a>
                                </li>
                                <li><a
                                        href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'ar'})) }}">ع</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>

                <!-- Bouton login/logout -->
                {% if app.user %}
                <a class="btn-getstarted" href="{{ path('app_logout') }}">{{ 'nav.logout'|trans }}</a>
                {% else %}
                <a class="btn-getstarted" href="{{ path('app_login') }}">{{ 'nav.login'|trans }}</a>
                {% endif %}

                <!-- Bouton mobile menu -->
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </div>
        </div>
    </header>
    {% endblock %}
    <main class="main">
        {% block body %} {# Content blocks will be replaced in each template #} {% endblock %}
    </main>
    {% block footer %}
    <footer id="footer" class="footer position-relative light-background">
        <div class="container footer-top">
            <div class="row gy-4 {% if app.request.locale == 'ar' %}flex-row-reverse{% endif %}">
                <!-- Logo et texte -->
                <div
                    class="col-lg-4 col-md-6 footer-brand {% if app.request.locale == 'ar' %}text-end{% else %}text-start{% endif %}">
                    <a href="{{ path('app_home', {'_locale': app.request.locale}) }}"
                        class="logo d-flex align-items-center {% if app.request.locale == 'ar' %}flex-row-reverse justify-content-end{% endif %}">
                        <img src="{{ asset('assets/img/logo.png') }}" loading="lazy" alt="{{ 'site.name'|trans }}"
                            class="logo-img">
                        <div
                            class="logo-text {% if app.request.locale == 'ar' %}me-3 text-end{% else %}ms-3 text-start{% endif %}">
                            <h2 class="sitenames">{{ 'site.name'|trans }}</h2>
                            <h2 class="sitenames">{{ 'site.name1'|trans }}</h2>
                            <h2 class="sitenames">{{ 'site.name2'|trans }}</h2>
                        </div>
                    </a>
                </div>

                <!-- Liens utiles -->
                <div
                    class="col-lg-4 col-md-6 footer-links {% if app.request.locale == 'ar' %}text-end{% else %}text-start{% endif %}">
                    <h4 class="{% if app.request.locale == 'ar' %}text-end{% else %}text-start{% endif %}">{{
                        'footer.useful_links'|trans }}</h4>
                    <ul
                        class="list-unstyled {% if app.request.locale == 'ar' %}text-end{% else %}text-start{% endif %}">
                        <li class="{% if app.request.locale == 'ar' %}text-end{% endif %}">
                            <a href="{{ path('app_home', {'_locale': app.request.locale}) }}"
                                class="{% if app.request.locale == 'ar' %}text-end d-block{% endif %}">{{
                                'nav.home'|trans }}</a>
                        </li>
                        <li class="{% if app.request.locale == 'ar' %}text-end{% endif %}">
                            <a href="{{ path('app_recrutement', {'_locale': app.request.locale}) }}"
                                class="{% if app.request.locale == 'ar' %}text-end d-block{% endif %}">{{
                                'nav.employment'|trans }}</a>
                        </li>
                        <li class="{% if app.request.locale == 'ar' %}text-end{% endif %}">
                            <a href="https://www.mia-dz.com"
                                class="{% if app.request.get('_route') == 'app_recrutement' %}active{% endif %} {% if app.request.locale == 'ar' %}text-end d-block{% endif %}">
                                {{ 'nav.formation'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Contact -->
                <div
                    class="col-lg-4 col-md-12 footer-contact {% if app.request.locale == 'ar' %}text-end{% else %}text-start{% endif %}">
                    <h4 class="{% if app.request.locale == 'ar' %}text-end{% else %}text-start{% endif %}">{{
                        'footer.contact'|trans }}</h4>
                    <p style="line-height: 2.8;"
                        class="{% if app.request.locale == 'ar' %}text-end{% else %}text-start{% endif %}">
                        <i class="bi bi-geo-alt {% if app.request.locale == 'ar' %}ms-2{% else %}me-2{% endif %}"></i>
                        {{ 'footer.address'|trans }} <br>
                        <i class="bi bi-envelope {% if app.request.locale == 'ar' %}ms-2{% else %}me-2{% endif %}"></i>
                        montessori.dz@gmail.com <br>
                    </p>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="container copyright">
            <div class="row">
                <div class="col-12 text-center">
                    <p>© <strong class="sitename">{{ 'site.name'|trans }} {{ 'site.name1'|trans }} 2025</strong> | {{
                        'footer.rights'|trans }}</p>
                </div>
            </div>
        </div>
    </footer>
    {% endblock %}

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="{{ asset('assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/aos/aos.js') }}"></script>
    <script src="{{ asset('assets/vendor/glightbox/js/glightbox.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/purecounter/purecounter_vanilla.js') }}"></script>
    <script src="{{ asset('assets/vendor/swiper/swiper-bundle.min.js') }}"></script>

    <!-- Main JS File -->
    <script src="{{ asset('assets/js/main.js') }}"></script>

    {% block javascripts %}{% endblock %}

</body>

</html>