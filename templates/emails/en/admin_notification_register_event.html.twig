{# /* EN: templates/emails/en/admin_notification_register_event.html.twig */ #}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>New barbecue registration</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            text-align: center;
        }

        .content {
            padding: 20px;
            background-color: #f9f9f9;
        }

        .info {
            margin-bottom: 20px;
        }

        .guests {
            padding-left: 20px;
        }

        .footer {
            text-align: center;
            font-size: 12px;
            color: #777;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>New barbecue registration</h1>
        </div>

        <div class="content">
            <p>Hello,</p>

            <p>A new registration has been recorded for the barbecue on Friday, May 30, 2025.</p>

            <div class="info">
                <h3>Participant information:</h3>
                <p>
                    Last name: {{ registration.lastName }}<br> First name: {{ registration.firstName }}<br> Email: {{
                    registration.email }}<br> Phone: {{ registration.phone }}<br> Registration date: {{
                    registration.registeredAt|date('m/d/Y at H:i') }}
                </p>
            </div>

            <div class="info">
                <h3>Guests:</h3>
                {% if registration.guests|length > 0 %}
                <ul class="guests">
                    {% for guest in registration.guests %}
                    <li>{{ guest.firstName }} {{ guest.lastName }}</li>
                    {% endfor %}
                </ul>
                {% else %}
                <p>No additional guests.</p>
                {% endif %}
            </div>

            <p>Total number of participants: {{ registration.guests|length + 1 }}</p>
        </div>

        <div class="footer">
            <p>This message was sent automatically - Please do not reply.</p>
        </div>
    </div>
</body>

</html>