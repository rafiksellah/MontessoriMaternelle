{# templates/event/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscriptions terminées{% endblock %}

{% block body %}
<section class="hero section d-flex align-items-center justify-content-center text-center"
    style="min-height: 100vh; background: linear-gradient(to right, #2c3e50, #4ca1af); color: white;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <i class="bi bi-check-circle-fill display-1 text-success mb-4"></i>
                <h1 class="display-4 fw-bold">Les inscriptions sont terminées</h1>
                <p class="lead mt-3 mb-5">
                    Merci pour votre intérêt ! Nous avons atteint la limite des inscriptions pour l’événement du
                    <strong>30 mai 2025</strong>.
                </p>
                <a href="{{ path('app_home') }}" class="btn btn-light btn-lg rounded-pill px-5 py-3">
                    <i class="bi bi-house-door me-2"></i> Retour à l’accueil
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}