{% extends 'base.html.twig' %} {% block title %}{{ 'site.name'|trans }} {{ 'site.name1'|trans }} {{ 'site.name2'|trans
}} - {% endblock %} {% block stylesheets %}
<link href="{{ asset('assets/css/home.css') }}" rel="stylesheet"> {% endblock %} {% block body %}
<main class="main">
    <!-- ======= Hero Section ======= -->
    <section id="hero-carousel" class="hero-carousel">
        <div class="container-fluid p-0" data-aos="fade-up">
            <div class="carousel-container">
                <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"
                            aria-current="true"></button>
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
                    </div>

                    <div class="carousel-inner">
                        <!-- Slide 1 -->
                        <div class="carousel-item active">
                            <img src="{{ asset('/assets/img/ecole.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <h2>{{ 'hero.welcome'|trans }}</h2>
                                <p>{{ 'hero.tagline'|trans }}</p>
                            </div>
                        </div>

                        <!-- Slide 2 -->
                        <div class="carousel-item">
                            <img src="{{ asset('/assets/img/ami.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <h2>{{ 'hero.education'|trans }}</h2>
                                <p>{{ 'hero.adapted'|trans }}</p>
                            </div>
                        </div>

                        <!-- Slide 3 -->
                        <div class="carousel-item">
                            <img src="{{ asset('/assets/img/DJAM1602.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <h2>{{ 'hero.development'|trans }}</h2>
                                <p>{{ 'hero.environment'|trans }}</p>
                            </div>
                        </div>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </section>
    <!-- End Hero Carousel -->

    <!-- ======= Environnements Section ======= -->
    <section id="environnements" class="environnements">
        <div class="container" data-aos="fade-up">
            {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                    aria-label="{{ 'formations.alerts.close'|trans }}"></button>
            </div>
            {% endfor %}
            <div class="section-header">
                <h2>{{ 'environments.title'|trans }}</h2>
                <p>{{ 'environments.subtitle'|trans }}</p>
            </div>

            <!-- Slider des environnements -->
            <div class="swiper environnements-slider" data-aos="fade-up" data-aos-delay="200">
                <div class="swiper-wrapper">

                    <!-- Environnement 1: NIDO -->
                    <div class="swiper-slide">
                        <div class="environnement-item">
                            <div class="environnement-img">
                                <img src="{{ asset('/assets/img/formation1.avif') }}" class="img-fluid"
                                    alt="{{ 'environments.nido.title'|trans }}">
                            </div>
                            <div class="environnement-info">
                                <h3>{{ 'environments.nido.title'|trans }}</h3>
                                <h4>{{ 'environments.nido.age'|trans }}</h4>
                                <p>{{ 'environments.nido.description'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <!-- End Environnement 1 -->

                    <!-- Environnement 2: COMMUNAUTÉ ENFANTINE -->
                    <div class="swiper-slide">
                        <div class="environnement-item">
                            <div class="environnement-img">
                                <img src="{{ asset('/assets/img/formation2.avif') }}" class="img-fluid"
                                    alt="{{ 'environments.community.title'|trans }}">
                            </div>
                            <div class="environnement-info">
                                <h3>{{ 'environments.community.title'|trans }}</h3>
                                <h4>{{ 'environments.community.age'|trans }}</h4>
                                <p>{{ 'environments.community.description'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <!-- End Environnement 2 -->

                    <!-- Environnement 3: CASA DEI BAMBINI -->
                    <div class="swiper-slide">
                        <div class="environnement-item">
                            <div class="environnement-img">
                                <img src="{{ asset('/assets/img/formation3.avif') }}" class="img-fluid"
                                    alt="{{ 'environments.casa.title'|trans }}">
                            </div>
                            <div class="environnement-info">
                                <h3>{{ 'environments.casa.title'|trans }}</h3>
                                <h4>{{ 'environments.casa.age'|trans }}</h4>
                                <p>{{ 'environments.casa.description'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <!-- End Environnement 3 -->

                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </section>
    <!-- End Environnements Section -->

    <!-- ======= Team Section ======= -->
    <section id="team" class="team">
        <div class="container" data-aos="fade-up">

            <div class="row">
                <!-- Image d'équipe -->
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="team-img">
                        <img src="{{ asset('/assets/img/equipe.webp') }}" class="img-fluid"
                            alt="{{ 'team.title'|trans }}">
                    </div>
                </div>

                <!-- Texte et bouton -->
                <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="200">
                    <h2>{{ 'team.title'|trans }}</h2>
                    <p>{{ 'team.description'|trans }}</p>
                    <div class="team-btn">
                        <a href="{{ path('app_recrutement', {'_locale': app.request.locale}) }}"
                            class="btn-rejoindre">{{ 'team.button'|trans }}</a>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- End Team Section -->

    <!-- ======= Contact Form Section ======= -->
    <section id="contact-form" class="contact-form">
        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <h2>{{ 'contact.title'|trans }}</h2>
                <p>{{ 'contact.subtitle'|trans }}</p>
            </div>

            <div class="row gy-5">
                <!-- Image à gauche -->
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="contact-img">
                        <img src="{{asset('/assets/img/equipe.webp')}}" class="img-fluid"
                            alt="{{ 'contact.title'|trans }}">
                    </div>
                </div>

                <!-- Formulaire à droite -->
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="contact-form-container">
                        {% if form_success is defined and form_success %}
                        <div class="alert alert-success">
                            {{ 'contact.success_message'|trans }}
                        </div>
                        {% endif %} {{ form_start(contact_form, {'attr': {'class': 'php-email-form'}}) }}
                        <div class="row">
                            <div class="col-md-6 form-group">
                                {{ form_label(contact_form.parentName, 'form.parent_name'|trans) }} {{
                                form_widget(contact_form.parentName, {'attr': {'class': 'form-control'}}) }} {{
                                form_errors(contact_form.parentName) }}
                            </div>
                            <div class="col-md-6 form-group">
                                {{ form_label(contact_form.childName, 'form.child_name'|trans) }} {{
                                form_widget(contact_form.childName, {'attr': {'class': 'form-control'}}) }} {{
                                form_errors(contact_form.childName) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group mt-3">
                                {{ form_label(contact_form.childBirthDate, 'form.child_birth_date'|trans) }} {{
                                form_widget(contact_form.childBirthDate, {'attr': {'class': 'form-control'}}) }} {{
                                form_errors(contact_form.childBirthDate) }}
                            </div>
                            <div class="col-md-6 form-group mt-3">
                                {{ form_label(contact_form.phoneNumber, 'form.phone_number'|trans) }} {{
                                form_widget(contact_form.phoneNumber, {'attr': {'class': 'form-control'}}) }} {{
                                form_errors(contact_form.phoneNumber) }}
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            {{ form_label(contact_form.email, 'form.email'|trans) }} {{ form_widget(contact_form.email,
                            {'attr': {'class': 'form-control'}}) }} {{ form_errors(contact_form.email) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_label(contact_form.objective, 'form.objective'|trans) }} {{
                            form_widget(contact_form.objective, {'attr': {'class': 'form-select'}}) }} {{
                            form_errors(contact_form.objective) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_label(contact_form.heardAboutUs, 'form.heard_about_us'|trans) }} {{
                            form_widget(contact_form.heardAboutUs, {'attr': {'class': 'form-control'}}) }} {{
                            form_errors(contact_form.heardAboutUs) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_label(contact_form.expectations, 'form.expectations'|trans) }} {{
                            form_widget(contact_form.expectations, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                            {{ form_errors(contact_form.expectations) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_widget(contact_form.agreeTerms) }} {{ form_label(contact_form.agreeTerms,
                            'form.agree_terms'|trans) }} {{ form_errors(contact_form.agreeTerms) }}
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn-envoi">{{ 'contact.submit'|trans }}</button>
                        </div>
                        {{ form_end(contact_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Form Section -->

    <script>
        /**
         * JavaScript pour initialiser le slider des environnements Montessori
         */
        document.addEventListener('DOMContentLoaded', function () {
            // Initialisation du slider des environnements
            const environnementsSlider = new Swiper('.environnements-slider', {
                speed: 600,
                loop: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false
                },
                slidesPerView: 'auto',
                pagination: {
                    el: '.swiper-pagination',
                    type: 'bullets',
                    clickable: true
                },
                breakpoints: {
                    320: {
                        slidesPerView: 1,
                        spaceBetween: 20
                    },
                    768: {
                        slidesPerView: 2,
                        spaceBetween: 30
                    },
                    1200: {
                        slidesPerView: 3,
                        spaceBetween: 30
                    }
                }
            });

            // Animation AOS pour les éléments qui apparaissent au scroll
            AOS.refresh();
        });
    </script>
</main>
{% endblock %}