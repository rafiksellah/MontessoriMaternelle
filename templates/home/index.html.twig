{% extends 'base.html.twig' %} {% block title %}{{ 'site.name'|trans }} {{ 'site.name1'|trans }} {{ 'site.name2'|trans
}} - {% endblock %} {% block stylesheets %}
<link href="{{ asset('assets/css/home.css') }}" rel="stylesheet"> {% endblock %} {% block body %}
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<main class="main">
    <!-- ======= Hero Section ======= -->
    <section id="hero-carousel" class="hero-carousel">
        <div class="container-fluid p-0" data-aos="fade-up">
            <div class="carousel-container">
                <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"
                            aria-current="true"></button>
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
                    </div>

                    <div class="carousel-inner">
                        <!-- Slide 1 -->
                        <div class="carousel-item active">
                            <img src="{{ asset('/assets/img/slide3.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <h2>{{ 'hero.education'|trans }}</h2>
                            </div>
                        </div>

                        <!-- Slide 2 -->
                        <div class="carousel-item">
                            <img src="{{ asset('/assets/img/ami.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <h2>{{ 'hero.welcome'|trans }}</h2>
                            </div>
                        </div>

                        <!-- Slide 3 -->
                        <div class="carousel-item">
                            <img src="{{ asset('/assets/img/ecole.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <h2>{{ 'hero.development'|trans }}</h2>
                            </div>
                        </div>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </section>
    <!-- End Hero Carousel -->

    <!-- Environments Section -->
    <section id="environments" class="environments light-background">
        <div class="container" data-aos="fade-up">
            <!-- Section header -->
            <div class="section-header text-center mb-5">
                <h2 class="envh2">{{ 'environments.title'|trans }}</h2 class="envh2">
                <p class="envp">{{ 'environments.subtitle'|trans }}</p>
            </div>

            <!-- Flash messages -->
            <div class="row justify-content-center mb-4">
                <div class="col-md-8">
                    {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Environment cards -->
            <div class="row gy-4">
                <!-- NIDO -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="card h-100">
                        <img src="{{ asset('assets/img/formation1.jpg') }}" class="card-img-top" alt="Nido"
                            loading="lazy">
                        <div class="card-body text-center p-4">
                            <div class="age-badge mb-3">
                                <span class="btn-getstarted rounded-pill px-3 py-2 fs-6">
                                    {{ 'environments.nido.age'|trans }}
                                </span>
                            </div>
                            <h3 class="card-title">{{ 'environments.nido.title'|trans }}</h3>
                            <p class="card-text">{{ 'environments.nido.description'|trans }}</p>
                        </div>
                    </div>
                </div>

                <!-- COMMUNAUTÉ ENFANTINE -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="card h-100">
                        <img src="{{ asset('assets/img/formation2.jpg') }}" class="card-img-top"
                            alt="Communauté Enfantine" loading="lazy">
                        <div class="card-body text-center p-4">
                            <div class="age-badge mb-3">
                                <span class="btn-getstarted rounded-pill px-3 py-2 fs-6">
                                    {{ 'environments.community.age'|trans }}
                                </span>
                            </div>
                            <h3 class="card-title">{{ 'environments.community.title'|trans }}</h3>
                            <p class="card-text">{{ 'environments.community.description'|trans }}</p>
                        </div>
                    </div>
                </div>

                <!-- CASA DEI BAMBINI -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                    <div class="card h-100">
                        <img src="{{ asset('assets/img/formation3.jpg') }}" class="card-img-top" alt="Casa dei Bambini"
                            loading="lazy">
                        <div class="card-body text-center p-4">
                            <div class="age-badge mb-3">
                                <span class="btn-getstarted rounded-pill px-3 py-2 fs-6">
                                    {{ 'environments.casa.age'|trans }}
                                </span>
                            </div>
                            <h3 class="card-title">{{ 'environments.casa.title'|trans }}</h3>
                            <p class="card-text">{{ 'environments.casa.description'|trans }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Environments Section -->

    <!-- ======= Team Section ======= -->
    <section id="team" class="team">
        <div class="container" data-aos="fade-up">
            <div class="row align-items-center">
                <!-- Image d'équipe -->
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="team-img">
                        <img src="{{ asset('/assets/img/equipe.jpg') }}" class="img-fluid"
                            alt="{{ 'team.title'|trans }}">
                    </div>
                </div>

                <!-- Texte et bouton -->
                <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="200">
                    <div class="content-wrapper">
                        <h2 class="text-center">{{ 'team.title'|trans }}</h2>
                        <div class="text-content">
                            <p class="description">
                                {{ 'team.part1'|trans }}
                                <span class="highlight-yellow">{{ 'team.highlight1'|trans }}</span>
                                {{ 'team.part2'|trans }}
                                <span class="highlight-blue">{{ 'team.highlight2'|trans }}</span>
                                {{ 'team.part2'|trans|split('.')|last }} <!-- pour éviter la répétition -->
                                <span class="highlight-orange">{{ 'team.highlight3'|trans }}</span>,
                                {{ 'team.part3'|trans }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Team Section -->

    <!-- Contact Form Section -->
    <section id="contact" class="contact section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-header text-center mb-5">
                <h2 class="envh2">{{ 'contact.title'|trans }}</h2>
                <p>{{ 'contact.subtitle'|trans }}</p>
            </div>

            <!-- Flash messages de succès -->
            {% if form_success or app.flashes('success')|length > 0 %}
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        {% for message in app.flashes('success') %}
                        {{ message }}
                        {% else %}
                        {{ 'contact.success_message'|trans }}
                        {% endfor %}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Flash messages d'erreur générale -->
            {% if app.flashes('error')|length > 0 %}
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        {% for message in app.flashes('error') %}
                        {{ message }}
                        {% endfor %}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Message d'erreur de validation du formulaire -->
            {% if form_error and not app.flashes('error')|length > 0 %}
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>{{ 'contact.form_validation_error'|trans }}</strong><br>
                        {{ 'contact.contact_alternative'|trans }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body p-4 p-lg-5 {% if app.request.locale == 'ar' %}rtl{% endif %}">
                            {{ form_start(contact_form, {'attr': {'class': 'needs-validation', 'dir':
                            (app.request.locale == 'ar' ? 'rtl' : 'ltr'), 'novalidate': true}}) }}
                            <div class="row">
                                <div class="col-12 mb-4">
                                    {{ form_label(contact_form.parentName, null, {'label_attr': {'class':
                                    'form-label'}}) }}
                                    {{ form_widget(contact_form.parentName, {'attr': {'class': 'form-control' ~
                                    (contact_form.parentName.vars.errors|length > 0 ? ' is-invalid' : ''),
                                    'placeholder': 'contact.placeholder.parent_name'|trans, 'dir': (app.request.locale
                                    == 'ar' ? 'rtl' : 'ltr')}}) }}
                                    {% if contact_form.parentName.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in contact_form.parentName.vars.errors %}
                                        <div>{{ error.message }}</div>
                                        {% endfor %}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="col-12 mb-4">
                                    {{ form_label(contact_form.childName, null, {'label_attr': {'class': 'form-label'}})
                                    }}
                                    {{ form_widget(contact_form.childName, {'attr': {'class': 'form-control' ~
                                    (contact_form.childName.vars.errors|length > 0 ? ' is-invalid' : ''),
                                    'placeholder': 'contact.placeholder.child_name'|trans, 'dir': (app.request.locale ==
                                    'ar' ? 'rtl' : 'ltr')}}) }}
                                    {% if contact_form.childName.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in contact_form.childName.vars.errors %}
                                        <div>{{ error.message }}</div>
                                        {% endfor %}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="col-12 mb-4">
                                    {{ form_label(contact_form.childBirthDate, null, {'label_attr': {'class':
                                    'form-label'}}) }}
                                    {{ form_widget(contact_form.childBirthDate, {'attr': {'class': 'form-control' ~
                                    (contact_form.childBirthDate.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                                    {% if contact_form.childBirthDate.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in contact_form.childBirthDate.vars.errors %}
                                        <div>{{ error.message }}</div>
                                        {% endfor %}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="col-md-6 mb-4">
                                    {{ form_label(contact_form.phoneNumber, null, {'label_attr': {'class':
                                    'form-label'}}) }}
                                    {{ form_widget(contact_form.phoneNumber, {'attr': {'class': 'form-control' ~
                                    (contact_form.phoneNumber.vars.errors|length > 0 ? ' is-invalid' : ''),
                                    'placeholder': '+213 000 000 000', 'dir': 'ltr'}}) }}
                                    {% if contact_form.phoneNumber.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in contact_form.phoneNumber.vars.errors %}
                                        <div>{{ error.message }}</div>
                                        {% endfor %}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="col-md-6 mb-4">
                                    {{ form_label(contact_form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(contact_form.email, {'attr': {'class': 'form-control' ~
                                    (contact_form.email.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder':
                                    'example@email.com', 'dir': 'ltr'}}) }}
                                    {% if contact_form.email.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in contact_form.email.vars.errors %}
                                        <div>{{ error.message }}</div>
                                        {% endfor %}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="col-12 mb-4">
                                    {{ form_label(contact_form.objective, null, {'label_attr': {'class': 'form-label'}})
                                    }}
                                    {{ form_widget(contact_form.objective, {'attr': {'class': 'form-select' ~
                                    (contact_form.objective.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                                    {% if contact_form.objective.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in contact_form.objective.vars.errors %}
                                        <div>{{ error.message }}</div>
                                        {% endfor %}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="col-12 mb-4">
                                    {{ form_label(contact_form.expectations, null, {'label_attr': {'class':
                                    'form-label'}}) }}
                                    {{ form_widget(contact_form.expectations, {'attr': {'class': 'form-control' ~
                                    (contact_form.expectations.vars.errors|length > 0 ? ' is-invalid' : ''),
                                    'placeholder': 'contact.placeholder.expectations'|trans, 'dir': (app.request.locale
                                    == 'ar' ? 'rtl' : 'ltr')}}) }}
                                    {% if contact_form.expectations.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in contact_form.expectations.vars.errors %}
                                        <div>{{ error.message }}</div>
                                        {% endfor %}
                                    </div>
                                    {% endif %}
                                </div>
                                {# <div class="col-12 mb-4 g-recaptcha"
                                    data-sitekey="6Lcei3ErAAAAAONBoB1TDq99iHF43UQjxdnKBYs3">
                                    }
                                </div> #}
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100 py-3">{{ 'contact.submit'|trans
                                    }}</button>
                            </div>
                        </div>
                        {{ form_end(contact_form) }}
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>

    <style>
        .rtl {
            direction: rtl;
            text-align: right;
        }

        .rtl .form-label {
            text-align: right;
        }

        .rtl .btn {
            direction: ltr;
            /* Garder les boutons en LTR pour un meilleur rendu */
        }

        .rtl .form-select {
            direction: ltr;
        }
    </style>

    <script>
        /**
         * JavaScript pour initialiser le slider des environnements Montessori
         */
        document.addEventListener('DOMContentLoaded', function () {
            // Initialisation du slider des environnements
            const environnementsSlider = new Swiper('.environnements-slider', {
                speed: 600,
                loop: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false
                },
                slidesPerView: 'auto',
                pagination: {
                    el: '.swiper-pagination',
                    type: 'bullets',
                    clickable: true
                },
                breakpoints: {
                    320: {
                        slidesPerView: 1,
                        spaceBetween: 20
                    },
                    768: {
                        slidesPerView: 2,
                        spaceBetween: 30
                    },
                    1200: {
                        slidesPerView: 3,
                        spaceBetween: 30
                    }
                }
            });

            // Animation AOS pour les éléments qui apparaissent au scroll
            AOS.refresh();
        });
    </script>
</main>
{% endblock %}