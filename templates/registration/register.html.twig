{# templates/registration/register.html.twig #} {% extends 'base.html.twig' %} {% block title %}Inscription - {{
parent() }}{% endblock %} {% block stylesheets %}
<style>
    .registration-section {
        padding: 80px 0;
        background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('../assets/img/background.jpg');
        background-size: cover;
        background-position: center;
    }

    .registration-card {
        border-radius: 15px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: none;
    }

    .card-header {
        background-color: #84b04a;
        color: white;
        text-align: center;
        padding: 25px;
        border-bottom: none;
    }

    .form-control {
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #84b04a;
        box-shadow: 0 0 0 0.2rem rgba(132, 176, 74, 0.25);
    }

    .btn-primary {
        background-color: #84b04a;
        border-color: #84b04a;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-primary:hover {
        background-color: #6d9539;
        border-color: #6d9539;
        transform: translateY(-2px);
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 8px;
    }

    .form-text {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .login-link {
        color: #84b04a;
        font-weight: 500;
    }

    .login-link:hover {
        color: #6d9539;
        text-decoration: none;
    }

    .registration-icon {
        font-size: 3rem;
        color: white;
        margin-bottom: 10px;
    }
</style>
{% endblock %} {% block body %}
<section class="registration-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card registration-card">
                    <div class="card-header">
                        <i class="bi bi-person-plus-fill registration-icon"></i>
                        <h2 class="mb-0">Rejoignez la communauté Montessori</h2>
                        <p class="mb-0">Créez votre compte pour accéder à nos ressources pédagogiques</p>
                    </div>
                    <div class="card-body p-4 p-md-5">
                        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate':
                        'novalidate'}}) }}

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class':
                                    'form-label'}}) }} {{ form_widget(registrationForm.firstName, {'attr': {'class':
                                    'form-control', 'placeholder': 'Votre prénom'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.firstName) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class':
                                    'form-label'}}) }} {{ form_widget(registrationForm.lastName, {'attr': {'class':
                                    'form-control', 'placeholder': 'Votre nom'}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.lastName) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class':
                            'form-label'}}) }} {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control',
                            'placeholder': 'exemple@email.com'}}) }}
                            <div class="form-text">Nous ne partagerons jamais votre email avec des tiers.</div>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(registrationForm.phone, 'Numéro de téléphone', {'label_attr': {'class':
                            'form-label'}}) }} {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control',
                            'placeholder': 'Ex: 05XXXXXXXX'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.phone) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class':
                            'form-label'}}) }} {{ form_widget(registrationForm.plainPassword, {'attr': {'class':
                            'form-control', 'placeholder': 'Choisissez un mot de passe sécurisé'}}) }}
                            <div class="form-text">Utilisez au moins 8 caractères, incluant lettres, chiffres et
                                caractères spéciaux.</div>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                        </div>

                        {% if registrationForm.agreeTerms is defined %}
                        <div class="form-check mb-4">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }} {{
                            form_label(registrationForm.agreeTerms, "J'accepte les conditions d'utilisation",
                            {'label_attr': {'class': 'form-check-label'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>
                        {% endif %}

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-check-circle-fill me-2"></i>S'inscrire
                            </button>
                        </div>

                        {{ form_end(registrationForm) }}

                        <div class="text-center mt-4">
                            <p>Vous avez déjà un compte? <a href="{{ path('app_login') }}"
                                    class="login-link">Connectez-vous ici</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}