{# templates/security/login.html.twig #} {% extends 'base.html.twig' %} {% block title %}Connexion - {{ parent() }}{%
endblock %} {% block stylesheets %}
<style>
    .login-section {
        padding: 80px 0;
        background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('../assets/img/background.jpg');
        background-size: cover;
        background-position: center;
        min-height: 80vh;
        display: flex;
        align-items: center;
    }

    .login-card {
        border-radius: 15px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: none;
    }

    .card-header {
        background-color: #84b04a;
        color: white;
        text-align: center;
        padding: 25px;
        border-bottom: none;
    }

    .form-control {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #84b04a;
        box-shadow: 0 0 0 0.2rem rgba(132, 176, 74, 0.25);
    }

    .btn-primary {
        background-color: #84b04a;
        border-color: #84b04a;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-primary:hover {
        background-color: #6d9539;
        border-color: #6d9539;
        transform: translateY(-2px);
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 10px;
    }

    .register-link {
        color: #84b04a;
        font-weight: 500;
    }

    .register-link:hover {
        color: #6d9539;
        text-decoration: none;
    }

    .login-icon {
        font-size: 3rem;
        color: white;
        margin-bottom: 10px;
    }

    .alert {
        border-radius: 8px;
        padding: 15px;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }

    .input-group .form-control {
        border-left: none;
        margin-bottom: 0;
    }

    .login-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .remember-me {
        display: flex;
        align-items: center;
    }

    .remember-me input {
        margin-right: 8px;
    }

    .forgot-password {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .forgot-password:hover {
        color: #84b04a;
        text-decoration: none;
    }
</style>
{% endblock %} {% block body %}
<section class="login-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card login-card">
                    <div class="card-header">
                        <i class="bi bi-box-arrow-in-right login-icon"></i>
                        <h2 class="mb-0">Connexion</h2>
                        <p class="mb-0">Accédez à votre espace Montessori</p>
                    </div>
                    <div class="card-body p-4 p-md-5">

                        {% if error %}
                        <div class="alert alert-danger mb-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> {{
                            error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                        {% endif %} {% if app.user %}
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle-fill me-2"></i> Vous êtes connecté en tant que {{
                            app.user.userIdentifier }}
                            <a href="{{ path('app_logout') }}" class="alert-link">Se déconnecter</a>
                        </div>
                        {% endif %}

                        <form method="post">
                            <div class="form-group mb-4">
                                <label for="inputEmail" class="form-label">Adresse email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                        class="form-control" autocomplete="email" required autofocus
                                        placeholder="exemple@email.com">
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label for="inputPassword" class="form-label">Mot de passe</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input type="password" name="password" id="inputPassword" class="form-control"
                                        autocomplete="current-password" required placeholder="Votre mot de passe">
                                </div>
                            </div>

                            <div class="login-options">
                                <div class="remember-me">
                                    <input type="checkbox" id="remember_me" name="_remember_me" checked>
                                    <label for="remember_me">Se souvenir de moi</label>
                                </div>
                                <a href="#" class="forgot-password">Mot de passe oublié?</a>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid gap-2">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <p>Pas encore de compte? <a href="{{ path('app_register') }}"
                                    class="register-link">Inscrivez-vous ici</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}